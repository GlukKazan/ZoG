  $1
  (verify (my-empty?))
  $1
  (verify (my-empty?))
  $1
  (verify (my-empty?))
  $1
  (verify (my-not-friend?))
  add
))

(define p-step (
  (check-drum)
  (common-start)
  $1
  (verify (my-not-friend?))
  (common-stop $2 $3)
))

(define slide (
  (common-start)
  $1
  (while (my-empty?)
    (common-stop $2 $3)
    $1
  )
  (verify (my-not-friend?))
  (common-stop $2 $3)
))

(define g-slide (
  $1
  (while (my-empty?)
    add
    $1
  )
  (verify (my-not-friend?))
  add
))

