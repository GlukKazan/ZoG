(define drop-dice (
  (verify (in-zone? dices))
  (verify not-friend?)
  (if (in-zone? count)
      mark z1
      (while (and not-empty? (on-board? counter))
         capture
         counter
      )
      (if empty?
          (create Mark)
       else
          capture
      )
      back
  )
  add
))

(define check-1
   (verify (or
       (and (piece? d1 x1) (piece? d0 x2) (piece? d0 x3) )
       (and (piece? d0 x1) (piece? d1 x2) (piece? d0 x3) )
       (and (piece? d0 x1) (piece? d0 x2) (piece? d1 x3) )
   ))
)

(define check-2
   (verify (or
       (and (piece? d1 x1) (piece? d1 x2) (piece? d0 x3) )
       (and (piece? d1 x1) (piece? d0 x2) (piece? d1 x3) )
       (and (piece? d0 x1) (piece? d1 x2) (piece? d1 x3) )
   ))
)

(define check-3
   (verify
       (and (piece? d1 x1) (piece? d1 x2) (piece? d1 x3) )
   )
)

(define check-4
   (verify
       (and (piece? d0 x1) (piece? d0 x2) (piece? d0 x3) )
   )
)

(define im-white?
   (in-zone? start d10)
)

(define refresh
   (if (im-white?)
       (if friend?
           (create White $1)
        else
           (create Black $1)
       )
    else
       (if friend?
           (create Black $1)
        else
           (create White $1)
       )
   )
)

(define add-piece
   mark z0 free
   (while (and not-empty? (on-board? free)) free)
   (if empty?
       (if (im-white?)
           (create Black Man)
        else
           (create White Man)
       )
   )
   back
)

(define check-refresh
   (if (on-board? down)
       (if (or (and (flag? is-enemy?) not-enemy?)
               (and (not-flag? is-enemy?) enemy?)
           )
           (refresh $3)
        else
           (refresh $2)
       )
    else
       (refresh $1)
   )
)

(define pre-action
   (if (on-board? home)
       (verify (empty? home))
   )
   (if (on-board? up)
       (verify (empty? up))
   )
   (set-flag is-king? false)
   (if (or (piece? King) (piece? KingE) (piece? KingF))
       (set-flag is-king? true)
   )
   (if (on-board? down)
       mark down
       (while (and (on-board? up) (not-empty? up))
            (if (or (piece? King) (piece? KingE) (piece? KingF))
                (check-refresh King KingF KingE)
             else
                (check-refresh Man ManF ManE)
            )
            (set-flag is-enemy? enemy?)
            up
       )
       back
   )
)

(define post-action
   (if (and not-empty? (on-board? up))
       (if (in-zone? safe)
           (verify not-enemy?)
       )
       (while (and (on-board? up) not-empty?) 
           (set-flag is-enemy? enemy?)
           up
       )
       (verify empty?)
       (if (flag? is-king?)
           (if (flag? is-enemy?)
               (add KingE)
            else
               (add KingF)
           )
        else
           (if (flag? is-enemy?)
               (add ManE)
            else
               (add ManF)
           )
       )
    else
       (if (in-zone? end)
           capture
           add
        else
           (verify not-friend?)
           (if (and (in-zone? fin) enemy?)
               (verify (piece? Man))
           )
           (if not-empty?
               (if (flag? is-king?)
                   (verify (piece? King))
                else
                   (verify (piece? Man))
               )
               (add-piece)
           )
           (if (flag? is-king?)
               (add King)
            else
               (add Man)
           )
      )
   )
)

(define common-step
   (if (in-zone? promo)
       (set-flag is-king? true)
   )
   (if (not-in-zone? end)
       $1
   )
)

(define step-1 (
   (check-1)
   (pre-action)
   (common-step $1)
   (post-action)
))

(define step-2 (
   (check-2)
   (pre-action)
   (common-step $1)
   (common-step $1)
   (post-action)
))

(define step-3 (
