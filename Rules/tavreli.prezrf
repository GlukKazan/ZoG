(define! -deep 3) 
(define! -common-directions (n e s w nw ne sw se))
(define! -bishop-directions (nw ne sw se))
(define! -rook-directions (n e s w))
(define! -knight-directions (nne nnw sse ssw ene ese wnw wsw))
(define! -pawn-directions (w e))
(define! -all-directions (n e s w nw ne sw se nne nnw sse ssw ene ese wnw wsw))

(define! repeat
  (if-less! 0 $1
     ($?2
        $2*
     )
     ($!2
        $1
     )
     (! repeat (!! (sum! $1 -1)) ($?2 $2*))
  )
)

(define! king-leap-all-n
  (if-less! 0 $1
     (for! $d ($ -common-directions)
        ( (concat! king-leap - $1) $d
        )
     )
     (! king-leap-all-n (!! (sum! $1 -1)))
  )
)

(define! king-leap-all
  (! king-leap-all-n ($ -deep))
)

(define! push-n
  (if-less! 0 $1
     (define (concat! push - $1)
        (if (and not-empty? (not-piece? K))
            (while not-empty?
                cascade
                from
                (! repeat $1 d)
                to
                (! repeat (!! (sum! $1 -1)) u)
            )
        )
     )
     (! push-n (!! (sum! $1 -1)))
  )
)

(define! push-all
  (! push-n ($ -deep))
)

(define! pop-n
  (if-less! 0 $1
     (define (concat! pop - $1)
        (! repeat $1 d)
        (verify not-enemy?)
        (unprom)
        (while not-empty?
           cascade
           from
           (! repeat $1 u)
           to
           (! repeat (!! (sum! $1 1)) d)
        )
     )
     (! pop-n (!! (sum! $1 -1)))
  )
)

(define! pop-all
  (! pop-n ($ -deep))
)

(! push-all)

(define unprom
   (if not-empty?
      cascade
      from
      (if (piece? HP)
          u
          to
          (change-type PH)
          d d
       else
          (if (piece? QP)
              u
              to
              (change-type PQ)
              d d
           else
              (if (piece? BP)
                  u
                  to
                  (change-type PB)
                  d d
               else
                  (if (piece? NP)
                      u
                      to
                      (change-type PN)
                      d d
                   else
                      (if (piece? RP)
                          u
                          to
                          (change-type PR)
                          d d
                       else
                          u
                          to
                          d d
                      )
                  )
              )
          )
      )
   )
)

(! pop-all)

(define slide-1-1 (
   (verify (in-zone? plane)) 
   mark
   $1    
   to
   (push-1)
   back
   (pop-1)
   add
))

(define rook-slide-1-1 (
   (verify (in-zone? plane)) 
   mark
   $1    
   (set-attribute never-moved? false) 
   to
   (push-1)
   back
   (pop-1)
   add
))

(define leap-1 (
   (verify (in-zone? plane)) 
