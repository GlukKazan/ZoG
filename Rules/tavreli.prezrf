(define king-leap-2 (
   (verify (in-zone? plane)) 
   mark
   $1    
   (set-attribute never-moved? false) 
   to

   back
   d
   (verify not-empty?)
   cascade
   from
   $1 to

   back
   $1

   (push-2)
   back
   (pop-2)
   add
))

(define king-leap-3 (
   (verify (in-zone? plane)) 
   mark
   $1    
   (set-attribute never-moved? false) 
   to

   back
   d
   (verify not-empty?)
   cascade
   from
   $1 to

   back
   d d
   (verify not-empty?)
   cascade
   from
   $1 to

   back
   $1

   (push-3)
   back
   (pop-3)
   add
))

(define pawn-leap-1 (
   (verify (in-zone? plane)) 
   mark
   n
   (verify empty?)
   (set-attribute never-moved? false) 
   to
   (push-1)
   back
   (pop-1)
   back
   n
   (if (in-zone? promotion)
       cascade
       (add $1)
    else
       add
   )
))

(define pawn-capture-1 (
   (verify (in-zone? plane)) 
   mark
   $1
   (verify not-empty?)
   (verify (or enemy? (not-piece? K)))
   (set-attribute never-moved? false) 
   to
   (push-1)
   back
   (pop-1)
   back
   $1
   (if (in-zone? promotion)
       cascade
       (add $2)
    else
       add
   )
))

(define en-passant-1 (
   (verify (in-zone? plane)) 
   mark
   $1
   (verify enemy?)
   (verify last-to?)
   (verify (or (piece? PR) (piece? PN) (piece? PB) (piece? PB) (piece? PQ) (piece? PH)))
   n to
   n
   (verify last-from?)
   cascade
   back
   $1
   from
   n d to
   back
   (pop-1)
   add   
))

(define pawn-jump (
   (verify (in-zone? plane)) 
   (verify never-moved?)
   n
   (verify empty?)
   n
   (verify empty?)
   (set-attribute never-moved? false) 
   add
))

(define O-O ( 
   (verify never-moved?)
   e
   (verify empty?)
   e
   (verify empty?)
   cascade
   e
   (verify (and friend? (piece? R) never-moved?) )
   from
   back
   (verify not-attacked?)
   e
   (verify not-attacked?)
   to
   (set-attribute never-moved? false)
   e
   (set-attribute never-moved? false)
   add
))

(define O-O-O ( 
   (verify never-moved?)
   w
   (verify empty?)
   w
   (verify empty?)
   cascade
   w
   (verify empty?)
   w
   (verify (and friend? (piece? R) never-moved?) )
   from
   back
   (verify not-attacked?)
   w
   (verify not-attacked?)
   to
   (set-attribute never-moved? false)
   w
   (set-attribute never-moved? false)
   add
))

