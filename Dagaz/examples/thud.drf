(def (kv-rock X)
     (check-rock X)
     X
     (check-rock (opposite X))
     add
     end-move
)

(def kv-rock-all
     (check (piece? Rock))
     capture
     (for X all-dirs
          save-all
          (kv-rock X)
     )
)

(def (kv-dwarf-capture X)
     (while _ t
           X
           (check empty?)
           save-state
           add
           (for Y (- all-dirs (opposite X))
                save-position
                Y
                (check enemy?)
                capture
                Y
                (check friend?)
           )
           end-move
     )
)

(def kv-dwarf-capture-all
     (check friend?)
     (check (piece? Dwarf))
     capture
     (for X all-dirs
           save-all
           (kv-dwarf-capture X)
     )
)

(def check-troll-win
     (check (piece? Rock))
     (if (<= 3
            (for X all-dirs
                 save-position
                 X
                 (check friend?)
            )
         )
         (change-owner Trolls)
     )
)

(def (kv-troll-move X)
     (while _ (<= 3)
           X
           (check empty?)
           save-state
           add
           (for Y (- all-dirs (opposite X))
                save-position
                Y
                (check-troll-win)
           )
           end-move
     )
)

(def kv-troll-move-all
     (check friend?)
     (check (piece? Troll))
     capture
     (for X all-dirs
          save-all
          (kv-troll-move X)
     )
)

(def (kv-troll-capture X)
     X
     (check enemy?)
     capture
     X
     (check empty?)
     add
     (for Y (- all-dirs (opposite X))
          save-position
          Y
          (check-troll-win)
     )
     (end-move-part -with-capture)       ; (save-all end-move restore-all (end-move-part-strict -with-capture))
)

(def kv-troll-capture-all
     (check friend?)
     (check (piece? Troll))
     capture
     (for X all-dirs
          save-all
          (kv-troll-capture X)
     )
)

