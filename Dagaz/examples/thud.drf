(def (kvb-rock X)
     (check-rock X)
     (while _ t
           X
           (check empty?)
           save-state
           (if (check-rock (opposite X)) ; при нормальном выходе возвращается t иначе f
               add
               end-move
           )
     )
)

(def kvb-rock-all
     (check (piece? Rock))
     capture
     (for X all-dirs
          save-all
          (kvb-rock X)
